{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [ "ESNext", "DOM", "WebWorker" ],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noUnusedLocals": true    
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [ "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue" ],
 //"references": [ { "path": "./tsconfig.node.json" } ]
}
